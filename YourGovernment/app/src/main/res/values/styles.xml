<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/AppThemeLigthBrown</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/AppThemeDarkBrown</item>
    </style>

    <style name="locationTextView" parent="android:Widget.TextView">
        <item name="android:background">@color/AppThemeDarkBrown</item>
        <item name="android:textColor">@color/colorLight</item>
    </style>

    <style name="officialDetails" parent="AppTheme">
        <item name="android:textColor">@color/colorLight</item>
        <item name="android:textColorLink">@color/colorLight</item>
    </style>

</resources>
